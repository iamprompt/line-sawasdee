{
  "type": "bubble",
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "{{title}}",
        "weight": "bold",
        "size": "xl",
        "color": "{{text_color}}",
        "align": "center"
      },
      {
        "type": "text",
        "text": "{{description}}",
        "margin": "xl",
        "color": "{{text_color}}",
        "wrap": true
      },
      {
        "type": "text",
        "text": "- {{name}}",
        "align": "end",
        "color": "{{text_color}}"
      }
    ],
    "backgroundColor": "{{bg_color}}"
  }
}
