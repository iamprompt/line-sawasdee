{
  "type": "bubble",
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "{{title}}",
        "weight": "bold",
        "size": "xl",
        "color": "#ffffff",
        "align": "center"
      },
      {
        "type": "text",
        "text": "{{description}}",
        "margin": "xl",
        "color": "#FFFFFF",
        "wrap": true
      },
      {
        "type": "text",
        "text": "- {{name}}",
        "align": "end",
        "color": "#FFFFFF"
      }
    ],
    "backgroundColor": "#000000"
  }
}
