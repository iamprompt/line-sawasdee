{
  "type": "bubble",
  "hero": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "image",
        "url": "{{image}}",
        "size": "full",
        "offsetTop": "none",
        "offsetBottom": "none",
        "aspectRatio": "16:9",
        "aspectMode": "cover"
      }
    ],
    "paddingAll": "none"
  },
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "{{title}}",
        "weight": "bold",
        "size": "xl",
        "color": "{{text_color}}",
        "align": "center"
      },
      {
        "type": "text",
        "text": "{{description}}",
        "margin": "xl",
        "color": "{{text_color}}",
        "wrap": true
      },
      {
        "type": "text",
        "text": "- {{name}}",
        "align": "end",
        "color": "{{text_color}}"
      }
    ],
    "backgroundColor": "{{bg_color}}"
  }
}
